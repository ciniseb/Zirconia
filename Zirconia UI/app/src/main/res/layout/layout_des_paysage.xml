<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.Des">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.sebastien.zirconia.ImageViewCarrePaysage
            android:id="@+id/d4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d4" />

        <com.example.sebastien.zirconia.ImageViewCarrePaysage
            android:id="@+id/d8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d8" />

        <com.example.sebastien.zirconia.ImageViewCarrePaysage
            android:id="@+id/d12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d12" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.example.sebastien.zirconia.ImageViewCarrePortrait
            android:id="@+id/dChoisi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@id/brasser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@id/brasser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/brasser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/style_button_ripple_rond"
            android:text="Brasser"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dChoisi" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.sebastien.zirconia.ImageViewCarrePaysage
            android:id="@+id/d6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d6" />

        <com.example.sebastien.zirconia.ImageViewCarrePaysage
            android:id="@+id/d10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d10" />

        <com.example.sebastien.zirconia.ImageViewCarrePaysage
            android:id="@+id/d20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d20" />
    </LinearLayout>
</LinearLayout>