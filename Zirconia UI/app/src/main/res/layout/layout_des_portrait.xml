<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    tools:context=".activity.Des">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dChoisi"
        app:layout_constraintTop_toTopOf="@id/gridLayout">

        <com.example.sebastien.zirconia.ImageViewCarrePortrait
            android:id="@+id/d4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d4"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <com.example.sebastien.zirconia.ImageViewCarrePortrait
            android:id="@+id/d6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d6"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <com.example.sebastien.zirconia.ImageViewCarrePortrait
            android:id="@+id/d8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d8"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <com.example.sebastien.zirconia.ImageViewCarrePortrait
            android:id="@+id/d10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d10"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <com.example.sebastien.zirconia.ImageViewCarrePortrait
            android:id="@+id/d12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d12"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <com.example.sebastien.zirconia.ImageViewCarrePortrait
            android:id="@+id/d20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_image_de"
            android:padding="20dp"
            android:src="@drawable/d20"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1" />
    </android.support.v7.widget.GridLayout>

    <com.example.sebastien.zirconia.ImageViewCarrePortrait
        android:id="@+id/dChoisi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        app:layout_constraintBottom_toTopOf="@id/brasser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="20dp"
        android:background="@drawable/layout_image_de" />

    <TextView
        android:id="@+id/resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gridLayout"
        app:layout_constraintBottom_toTopOf="@id/brasser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="60sp" />

    <Button
        android:id="@+id/brasser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dChoisi"
        android:background="@drawable/style_button_ripple_rond"
        android:text="Brasser"/>

</android.support.constraint.ConstraintLayout>